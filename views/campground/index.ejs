<%-layout('layouts/boilarplate') %>
    
    <h1> All campground</h1>
<button><a href="/campground/new"> Add Campground</a></button>
<ul>
    <% for(let camp  of campground) {%>
       <div class="card">
        <div class="row">
           
            <div class="col-md-4">
            <img src="<%=camp.image  %>" alt="" class="img-fluid"> </div>    
            <div class="col-md-8">
                <h5 class="card-title">
                    <%=camp.title  %>
                </h5>
                <p  class="card-text">
                    <%= camp.description  %>
                </p>
                <p class="card-text">
                    <small class="text-muted">

                        <%= camp.location  %>
                    </small>
                </p>
                <a class="btn btn-primary" href="/campground/<%=camp._id  %>"> View <%=camp.title %></a>
            </div> 
        </div>
       </div>
        
        <% } %>
</ul>

